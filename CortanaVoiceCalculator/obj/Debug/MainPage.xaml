<Page
    x:Class="CortanaVoiceCalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CortanaVoiceCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <MediaElement 
            Name="voicePlaybackElement"
            AutoPlay="True"
            HorizontalAlignment="Left"
            Height="100" Margin="131,63,0,0" 
            VerticalAlignment="Top"
            Width="100"/>
        <TextBlock
            x:Name="Title" 
            HorizontalAlignment="Left"
            Margin="28,40,0,0"
            TextWrapping="Wrap"
            Text="Welcome to Cortana Voice Calculator"
            VerticalAlignment="Top" 
            FontSize="20"
            FontFamily="Calisto MT"
            FontWeight="Bold"/>
        <TextBlock
        	x:Name="OperationBox" 
        	HorizontalAlignment="Left"
        	Margin="28,168,0,0"
        	TextWrapping="Wrap"
        	VerticalAlignment="Top" 
        	FontSize="20" 
            FontFamily="Calisto MT" 
            FontWeight="Bold"/>
        <TextBlock
        	x:Name="AnswerBox" 
        	HorizontalAlignment="Left"
        	Margin="28,314,0,0"
        	TextWrapping="Wrap"
            FontSize="20" 
            FontFamily="Calisto MT" 
            FontWeight="Bold"/>
        <Button x:ConnectionId='1' 
            x:Name="resfreshButton"
            Content="Refresh"
            HorizontalAlignment="Left"
            Margin="19,529,0,0"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.5,0.5"
            UseLayoutRounding="False"
            d:LayoutRounding="Auto"                             >
            <Button.RenderTransform>
                <CompositeTransform SkewY="0.645" TranslateY="0.614"/>
            </Button.RenderTransform>
        </Button>
        <Image
            x:Name="answerImageBox"
            Source="/Assets/rainbow.scale-2400.png"
            HorizontalAlignment="Left" 
            Height="400" 
            Margin="0,68,-67,0" 
            VerticalAlignment="Top" 
            Width="467"
            Visibility="Collapsed" 
            RenderTransformOrigin="-0.028,1.077"/>
        <MediaElement 
            x:Name="rickVid"
            Source="https://www.youtube.com/watchv/dQw4w9WgXcQ"
            HorizontalAlignment="Left"
            Height="300" 
            Margin="46,117,0,0"
            VerticalAlignment="Top"            
            Width="300"
            AutoPlay="True"/>
    </Grid>
</Page>

